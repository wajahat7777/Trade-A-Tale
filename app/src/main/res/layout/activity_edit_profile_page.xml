<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfilePage">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_marginBottom="15dp"
        android:background="@color/AppPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="200dp"
            android:layout_height="125dp"
            android:src="@drawable/app_logo_white_right"
            android:layout_centerHorizontal="true"
            android:contentDescription="ShelfShare Logo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/HeaderBar"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:text="Edit Profile"
            android:textSize="25sp"
            android:textColor="@color/AppPrimary"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/myBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textStyle="bold"
            android:background="@null"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-15dp"
            android:textColor="#EA3E23"/>

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/HeaderBar"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#FFFFFF">

            <RelativeLayout
                android:id="@+id/Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/ProfilePic"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:alpha="0.5"
                        android:id="@+id/ProfilePicture"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/default_profile_pic"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:src="@drawable/orange_camera_logo"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/Username"
                    android:layout_below="@id/ProfilePic"
                    android:text="Loading..."
                    android:layout_marginTop="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/AppPrimary"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:id="@+id/ToEdit"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/Name"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Heading"
                            android:text="Name"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/AppPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:layout_below="@id/Heading"
                            android:id="@+id/nameEditText"
                            android:layout_marginTop="5dp"
                            android:hint="Loading..."
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="20dp"
                            android:textColorHint="#CAC4BE"
                            android:background="@drawable/edittext_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/UsernameE"
                        android:layout_below="@id/Name"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Heading2"
                            android:text="Username"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/AppPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:layout_below="@id/Heading2"
                            android:id="@+id/usernameEditText"
                            android:layout_marginTop="5dp"
                            android:hint="Loading..."
                            android:textColorHint="#CAC4BE"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="20dp"
                            android:background="@drawable/edittext_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/Contact"
                        android:layout_below="@id/UsernameE"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Heading3"
                            android:text="Contact Number"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/AppPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:layout_below="@id/Heading3"
                            android:id="@+id/contactEditText"
                            android:layout_marginTop="5dp"
                            android:hint="+0000000000"
                            android:textColorHint="#CAC4BE"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="20dp"
                            android:background="@drawable/edittext_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/Bio"
                        android:layout_below="@id/Contact"
                        android:layout_margin="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Heading4"
                            android:text="Bio"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/AppPrimary"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:layout_toEndOf="@id/Heading4"
                            android:id="@+id/bioEditText"
                            android:layout_marginTop="-5dp"
                            android:layout_marginStart="25dp"
                            android:hint="Write your bio..."
                            android:textColorHint="#CAC4BE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>