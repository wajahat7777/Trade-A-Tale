<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header -->
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/AppPrimary"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:contentDescription="Menu"
                    android:layout_centerVertical="true"
                    android:src="@drawable/menu_logo" />

                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:src="@drawable/app_logo_white_right"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="ShelfShare Logo" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/header"
                android:id="@+id/SearchBar"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/Search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search"
                    android:textColorHint="#A8A9AB"
                    android:layout_centerVertical="true"
                    android:background="@drawable/search_button_background"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/SearchLogo"
                    android:background="@drawable/searchlogo"
                    android:layout_centerVertical="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/SearchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filter by Category:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/AppPrimary"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/categoryFilterSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_below="@id/SearchBar"
                android:id="@+id/BooksSearched"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/booksRecyclerView"
                    android:padding="10dp"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>