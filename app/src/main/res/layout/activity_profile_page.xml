<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ProfilePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header"
                android:background="@color/AppPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/back_navigation"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:contentDescription="Back"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back_navigation" />

                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="200dp"
                    android:layout_height="125dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="ShelfShare Logo"
                    android:src="@drawable/app_logo_white_right" />

                <ImageView
                    android:id="@+id/editProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/edit_profile"
                    android:contentDescription="Edit Profile" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:id="@+id/ProfileDesc"
                android:layout_below="@id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ProfilePic"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/default_profile_pic"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>

                <TextView
                    android:id="@+id/Name"
                    android:layout_below="@id/ProfilePic"
                    android:text="Loading..."
                    android:layout_marginTop="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/AppPrimary"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/Bio"
                    android:layout_below="@id/Name"
                    android:text=""
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/AppPrimary"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/Books"
                android:layout_below="@id/ProfileDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/bookRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"/>

                </LinearLayout>

            </HorizontalScrollView>

            <Button
                android:id="@+id/InventoryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INVENTORY"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_background"
                android:padding="12dp"
                android:layout_below="@id/Books"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>